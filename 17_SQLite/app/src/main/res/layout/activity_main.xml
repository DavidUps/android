<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.arribasd.a17_sqlite.MainActivity"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp">

    <Button
        android:onClick="onClick"
        android:id="@+id/registrarBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar Usario"
        android:textAllCaps="false"
        />
    <Button
        android:onClick="onClick"
        android:id="@+id/consultarBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consultar Usuario"
        android:textAllCaps="false"/>

    <Button
        android:onClick="onClick"
        android:id="@+id/consultarSpinnerBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consultar Usuarios Usando Spinner"
        android:textAllCaps="false"/>
    <Button
        android:onClick="onClick"
        android:id="@+id/consultarListViewBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consultar Usuarios Usando ListView"
        android:textAllCaps="false"/>
</LinearLayout>
